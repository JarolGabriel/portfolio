---
import { Sun, Moon } from 'lucide-astro';

interface Props {
  navLinks: Array<{ label: string; href: string }>;
  currentLang: string;
}

const { navLinks, currentLang } = Astro.props;
---

<div class="mobile-menu-panel">


  <ul class="mobile-menu hidden">
    {navLinks.map((link) => (
      <li><a href={link.href}>{link.label}</a></li>
    ))}
  
  
  <li class="mobile-controls">
    <a href={currentLang === 'es' ? '/en' : '/es'} class="lang-picker">
      {currentLang === 'es' ? <img src="https://flagcdn.com/w20/es.png" width="20" alt="ES" /> : <img src="https://flagcdn.com/w20/us.png" width="20" alt="EN" />}
      <span>{currentLang === 'es' ? 'ES' : 'EN'}</span>
    </a>
    <button id="theme-btn">
      <Sun size={20} class="sun-icon" />
      <Moon size={20} class="moon-icon" />
    </button>
  </li>
  <hr class="menu-divider" />
</ul>

</div>


<style>

 .mobile-menu {
    position: absolute;
    top: 100%;
    width: 100%;
    left: 0;
    right: 0;
  

    background-color: var(--color-bg, white);
    border: 1px solid var(--color-border);
    border-radius: 0 0 12px 12px;

    z-index: 999;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);

    list-style: none;
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-top: 1px solid var(--color-border);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

   .mobile-menu a {
    text-decoration: none;
    color: var(--color-text);
    font-family: var(--font-menu);
    font-size: 1.1rem;
    transition: color 0.2s ease;
  }

  .mobile-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding-top: 1rem;
  }

  .mobile-menu-panel {
  width: 300px;
  background-color: var(--color-bg);
  border-radius: 12px;
}

   .hidden {
    display: none;
  }

   .mobile-menu a:hover {
    color: var(--color-accent);
  }


  .sun-icon { display: none; }
.moon-icon { display: block; }

:global(.dark) .sun-icon {
  display: block;
}

:global(.dark) .moon-icon {
  display: none;
}

  .lang-picker {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  text-decoration: none;
  font-family: var(--font-menu);
  font-weight: 600;
  color: var(--color-text);
  transition: color 0.2s ease;
}

.lang-picker:hover {
  color: var(--color-accent);
}


.lang-picker img {
  display: block;
  border-radius: 2px;
  object-fit: cover;
  box-shadow: 0 0 2px rgba(0,0,0,0.2);
}


@media (min-width: 1024px) {


    #menu-btn {
      display: none;
    }

    .mobile-menu {
      display: none !important;
    }


  }



</style>
